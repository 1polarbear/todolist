<p id="notice"><%= notice %></p>

<h1>Lists</h1>

<table class="table">
  <thead class = "thead-dark">
    <tr>
      <th>Task</th>
      <th>Done</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody class="table table-striped table-bordered">
    <% @lists.each do |list| %>
      <tr>
        <td><%= list.task %></td>
        <td><%= list.done %></td>
        <td><%= link_to 'Show', list %></td>
        <td><%= link_to 'Edit', edit_list_path(list) %></td>
        <td><%= link_to 'Destroy', list, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New List', new_list_path %> |
<%= link_to 'Delete All', lists_delete_all_path, method: :delete, data: {confirm: 'Are you sure you?'} %> | 
<%= link_to 'Select Done Tasks', lists_path(done: :true) %>
